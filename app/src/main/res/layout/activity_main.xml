<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLinearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/titleText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Spotify Streamer"
            android:id="@+id/spotifyBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:background="#2979FF"
            android:textSize="16dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:text="Scores App"
            android:id="@+id/scoresBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:background="#2979FF"
            android:textSize="16dp"
            android:shadowColor="#BDBDBD"
            android:singleLine="false"
            android:onClick="onClick"/>

        <Button
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/libraryBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:background="#2979FF"
            android:textSize="16dp"
            android:shadowColor="#BDBDBD"
            android:singleLine="false"
            android:onClick="onClick"/>

        <Button
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:text="Build It Bigger"
            android:id="@+id/buildBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:background="#2979FF"
            android:textSize="16dp"
            android:shadowColor="#BDBDBD"
            android:singleLine="false"
            android:onClick="onClick"/>

        <Button
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:text="Bacon Reader"
            android:id="@+id/baconBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:background="#2979FF"
            android:textSize="16dp"
            android:shadowColor="#BDBDBD"
            android:singleLine="false"
            android:onClick="onClick"/>

        <Button
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Capstone: My Own App"
            android:id="@+id/capstoneBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:background="#00C853"
            android:textSize="16dp"
            android:shadowColor="#BDBDBD"
            android:singleLine="false"
            android:onClick="onClick"/>
    </LinearLayout>
</RelativeLayout>
